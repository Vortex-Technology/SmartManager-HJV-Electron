{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@components/*": [
        "./src/renderer/components/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@hooks/*": [
        "./src/renderer/hooks/*"
      ],
      "@pages/*": [
        "./src/renderer/pages/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@styles/*": [
        "./src/renderer/styles/*"
      ],
      "@routes/*": [
        "./src/renderer/routes/*"
      ],
      "@layouts/*": [
        "./src/renderer/layouts/*"
      ],
      "@store/*": [
        "./src/renderer/store/*"
      ],
      "@@types/*": [
        "./src/@types/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@env/*": [
        "./src/env/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@tests/*": [
        "./src/tests/*"
      ]
    },
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
